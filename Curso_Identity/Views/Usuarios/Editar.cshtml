@model Curso_Identity.Models.AppUsuario;

@{
    ViewData["Title"] = "Modificar rol del usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="card">
    <div class="card-body ">
        <h3 class="card-title text-center"> Editar rol de : @Model.Nombre</h3>
        <form asp-controller="Usuarios" asp-action="Editar" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row mt-4">
                <div class="col-sm-6">
                    <div class="mb-3">

                        <label asp-for="Rol" class="col-md-2"></label>
                        <select asp-for="IdRol" asp-items="@Model.ListaRoles" class="form-control">

                            <option disable selected>----Seleccionar Rol----</option>

                        </select>
                    </div>
                    

                </div>
            </div>


            <div class="row"

               <div class="col-sm-10 offset-2">

                   <button type="submit" class="btn  btn-success w-75 btn-lg">Editar<i class="bi bi-arrow-right-circle-fill"</button>


               </div>



           </div>
        </form>

    </div>
</div>










@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }