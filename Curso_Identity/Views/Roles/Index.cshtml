@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>;
@{

    ViewData["Title"] = "Administracion de Roles";

}



<h1 class="text-center"> Administracion de roles</h1>

<div class="row">

    <div>
        <a asp-action="Crear" asp-controller="Roles" class="btn btn-primary w-100">
          Crear nuevo rol
        </a>
    </div>
</div>

<div>
<div class="row">
    <div class="col-sm-12">
        <div class="card-header">

            <h3><strong>Lista de roles</strong></h3>
        </div>


    </div>

<div class="card-body">
    <div class="table-responsive">
        @if (Model.Count()>0)
        {
        <table class="d-lg-table table-bordered" id="tablaRoles" width="100%" cellspacing="0">

            <thead>

                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Acciones</th>

                </tr>

            </thead>
            <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>

                            <td>@Html.DisplayFor(m=>item.Id)</td>
                            <td>@Html.DisplayFor(m=>item.Name)</td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Roles" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                                <form asp-action="Borrar" asp-route-id="@item.Id">

                                    <button type="submit" onclick="return confirm ('Esta seguro de borrar este registro?')" class="btn btn-danger">Borrar</button>

                                </form>


                            </td>



                        </tr>                




    }
            </tbody>






            </table>
        }
        else
        {
         <p>No hay registros</p>   
        
        }




    </div>



</div>
</div>
</div>



@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }



    <script>

        $(document).ready(Function(){



            $('#tablaRoles').DataTable({

                lenguage: {
                    "Decimal": "",
                    "emptyTable": "no hay informacion",
