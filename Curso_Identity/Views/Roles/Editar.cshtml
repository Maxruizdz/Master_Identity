@model Microsoft.AspNetCore.Identity.IdentityRole;

@{
    ViewData["Title"] = "Modificar rol seleccionado ";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="card">
    <div class="card-body ">
        <h3 class="card-title text-center"> Editar de usuario</h3>
        <form asp-controller="Roles" asp-action="Editar" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row mt-4">
                <div class="col-sm-6">
                    <div class="mb-3">

                        <label asp-for="Name" class="col-md-2"></label>
                        <input asp-for="Name" class="form-control" placeholder="ingrese el nombre del rol" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    
                </div>
            </div>


            <div class="row"

               <div class="col-sm-10 offset-2">

                   <button type="submit" class="btn  btn-success w-75 btn-lg">Editar<i class="bi bi-arrow-right-circle-fill"</button>


               </div>



           </div>
           </form>

</div>
</div>



          





   
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }